

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>


<%= form_for @appearance do |f| %>
  <%= f.label :guest %>
  <%= f.collection_select :guest_id, Guest.all, :id, :name %><br>

  <%= f.label :episode %>
  <%= f.collection_select :episode_id, Episode.all, :id, :number %><br>

  <%= f.label "Rating" %>
  <%= f.text_field :guest_rating %><br>

  <%= f.submit %>

<% end %>
